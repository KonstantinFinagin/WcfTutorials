<Window x:Class="GeoLib.WindowsHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="btnStart" Margin="10" Click="BtnStart_OnClick">Start</Button>
            <Button x:Name="btnStop" Margin="10" Click="BtnStop_OnClick">Stop</Button>
            <Label x:Name="lblMessage" Margin="10" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
